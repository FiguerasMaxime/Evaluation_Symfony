{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block stylesheets %}
	<style>

		ul {
			display: flex;
		}
		ul li {
			list-style: none;
			margin: 2vh 2vw;
		}
		.card {
			width: 200px;
		}
		.card img {
			width: 100%;
		}
	</style>
{% endblock %}

{% block body %}

	<h1>{{'produit.titre' | trans}}</h1>
	{% if produits is not empty%}
		<table border="1" class="table table-striped table-inverse">
			<thead>
				<tr>
					<th>{{'produit.photo'| trans}}</th>
					<th>{{'produit.nom'| trans}}</th>
					<th>{{'produit.qte'| trans}}</th>
					<th>{{'produit.prix'| trans}}</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td>
							<div class="card">
								<img src="{{ asset('uploads/'~produit.photo) }}">
							</div>
						</td>
						<td>
							<a href="{{path('mon_produit', {'id': produit.id}) }}">{{produit.nom}}</a>
						</td>
						<td>{{produit.qte}}</td>
						<td>{{produit.prix}}â‚¬</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>{{'produit.alert' | trans}}</p>
	{% endif %}

	<h2>{{'form_produit.action' | trans}}</h2>
	{{form(form)}}{% endblock %}
